            background-size: cover;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .header {
            background-color: #b30000;
            padding: 15px 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .logo-text a {
            color: white;
            text-decoration: none;
            font-size: 28px;
            font-family: 'Montserrat', sans-serif;
            font-weight: bold;
        }
        .nav-links {
            display: flex;
            gap: 20px;
        }
        .nav-links a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            transition: color 0.3s;
        }
        .nav-links a:hover {
            color: #ffcccc;
        }
        .auth-buttons {
            display: flex;
            gap: 10px;
        }
        .auth-buttons a {
            color: #b30000;
            background-color: white;
            text-decoration: none;
            padding: 5px 15px;
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
        }
        .auth-buttons a:hover {
            background-color: #ffcccc;
            color: #b30000;
        }
        .footer {
            background-color: #000;
            color: #fff;
            padding: 20px;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
        .footer .social-icons a {
            color: #fff;
            margin: 0 10px;
            text-decoration: none;
            font-size: 24px;
        }
        .container {
            display: flex;
            justify-content: space-between;
            padding: 50px;
            flex: 1;
        }
        .form-container, .info-container {
            background: rgba(255, 255, 255, 0.5); /* Adjust the transparency here */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-left: 200px;
            margin-right: 200px;
            margin-bottom: 90px;
        }
        .form-container {
            width: 30%;
        }
        .info-container {
            width: 25%;
            margin-bottom: 500px;
        }
        .form-container input, .form-container select {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-weight: bold;
        }
        .form-container label {
            font-weight: bold;
        }
        .form-container .checkbox-container {
            display: flex;
            align-items: center;
        }
        .form-container .checkbox-container input {
            width: auto;
            margin-right: 10px;
        }
        .form-container .checkbox-container label {
            font-weight: normal;
        }
        .form-container .submit-btn {
            background-color: #e60000;
            color: white;
            padding: 10px 20px; /* Adjust padding to fit the text */
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 20px; /* Add margin to move the button down */
            display: block;
            margin-left: auto;
            margin-right: auto;
            font-weight: bold;
        }
        .form-container .login-link {
            text-align: center;
            margin-top: 10px;
        }
        .form-container .login-link a {
            color: #e60000;
            text-decoration: none;
            font-weight: bold;
        }
        .info-container ul {
            list-style: none;
            padding: 0;
        }
        .info-container ul li {
            display: flex;
            align-items: center;
            margin: 10px 0;
            font-weight: bold;
        }
        .info-container ul li i {
            color: #e60000;
            margin-right: 10px;
        }
    </style>
</head>
